reset-html5()

replace(expr, str, val)
	expr = clone(expr)
	for e, i in expr
		if str == e
			expr[i] = val

	return expr

calc(attr)
	add-property(current-property[0], replace(current-property[1], '__CALL__', s('-webkit-calc(%s)', attr)))
	add-property(current-property[0], replace(current-property[1], '__CALL__', s('-moz-calc(%s)', attr)))
	s('calc(%s)', attr)

